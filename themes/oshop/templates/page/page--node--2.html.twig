{% include "@oshop/header.html.twig" %}
<div class="page-content">
   <section>
      <div class="container">
         <div class="row addbtn addbtn-theme addbtn">
            {% if shop_sidebar == "left" %}
            <div class="col-lg-9 col-md-12 order-lg-12">
               {{ page.content }}
               {{ page.section }}
            </div>
            <div class="col-lg-3 col-md-12 order-lg-1 sidebar">
               {{ page.shop_sidebar}}
            </div>
         </div>
         {% elseif shop_sidebar == "right" %}
         <div class="col-lg-9 col-md-12">
            {{ page.content }}
            {{ page.section }}
         </div>
         <div class="col-lg-3 col-md-12 sidebar">
            {{ page.shop_sidebar}}
         </div>
      </div>
      {% else %}
      <div class="col-lg-12 col-md-12">
         {{ page.content }}
         {{ page.section }}
      </div>
      {% endif %}
   </section>

   {{ page.newsletter }}
</div>



{% include "@oshop/footer.html.twig" %}